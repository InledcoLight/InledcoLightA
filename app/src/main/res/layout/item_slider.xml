<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/slider_chn_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:text="@string/light_channel_name"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp"/>

    <SeekBar
        android:id="@+id/item_chn_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="125"
        android:maxHeight="6dp"
        android:max="1000"
        android:paddingBottom="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingTop="16dp"
        android:progress="0"
        android:progressDrawable="@drawable/custom_seekebar_red"
        android:thumb="@drawable/shape_thumb_red"/>

    <TextView
        android:id="@+id/item_chn_percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:gravity="center_vertical|right"
        android:text="@string/light_channel_percent"
        android:textColor="@color/colorTextSecond"
        android:textSize="12sp"/>

</LinearLayout>

