<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.inledco.fluvalsmart.com.inledco.light.fragment.DeviceFragment">

    <ImageView
        android:id="@+id/device_iv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_press_add"/>

    <TextView
        android:id="@+id/device_tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_press_to_scan"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/device_rv_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</LinearLayout>
