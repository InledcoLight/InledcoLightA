<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_color_slider_name"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="@string/light_channel_name"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"/>

    <SeekBar
        android:id="@+id/item_color_slider_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="1000"
        android:maxHeight="6dp"
        android:progress="0"
        android:progressDrawable="@drawable/custom_seekebar_red"
        android:thumb="@drawable/shape_thumb_red"
        android:layout_toEndOf="@id/item_color_slider_name"
        android:layout_toStartOf="@id/item_color_slider_percent"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/item_color_slider_percent"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="@string/light_channel_percent"
        android:textColor="@color/colorTextSecond"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        />


</RelativeLayout>