<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inledco.fluvalsmart.fragment.LightManualFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ListView
            android:id="@+id/light_manual_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:dividerHeight="1dp"
            android:divider="@color/colorTransparent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="8dp">
        <com.gigamole.library.ArcProgressStackView
            android:id="@+id/manual_custom_p1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@mipmap/ic_p1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:apsv_indicator_orientation="vertical"
            app:apsv_rounded="true"
            app:apsv_animated="true"
            app:apsv_draw_width="12dp"
            app:apsv_model_offset="0dp"
            app:apsv_start_angle="135"
            app:apsv_sweep_angle="270"
            app:apsv_animation_duration="1000"
            app:apsv_shadowed="false"
            app:apsv_model_bg_enabled="true"/>
        <com.gigamole.library.ArcProgressStackView
            android:id="@+id/manual_custom_p2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@mipmap/ic_p2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:apsv_indicator_orientation="vertical"
            app:apsv_rounded="true"
            app:apsv_animated="true"
            app:apsv_draw_width="12dp"
            app:apsv_model_offset="0dp"
            app:apsv_start_angle="135"
            app:apsv_sweep_angle="270"
            app:apsv_animation_duration="1000"
            app:apsv_shadowed="false"
            app:apsv_model_bg_enabled="true"/>
        <com.gigamole.library.ArcProgressStackView
            android:id="@+id/manual_custom_p3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@mipmap/ic_p3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:apsv_indicator_orientation="vertical"
            app:apsv_rounded="true"
            app:apsv_animated="true"
            app:apsv_draw_width="12dp"
            app:apsv_model_offset="0dp"
            app:apsv_start_angle="135"
            app:apsv_sweep_angle="270"
            app:apsv_animation_duration="1000"
            app:apsv_shadowed="false"
            app:apsv_model_bg_enabled="true"/>
        <com.gigamole.library.ArcProgressStackView
            android:id="@+id/manual_custom_p4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@mipmap/ic_p4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:apsv_indicator_orientation="vertical"
            app:apsv_rounded="true"
            app:apsv_animated="true"
            app:apsv_draw_width="12dp"
            app:apsv_model_offset="0dp"
            app:apsv_start_angle="135"
            app:apsv_sweep_angle="270"
            app:apsv_animation_duration="1000"
            app:apsv_shadowed="false"
            app:apsv_model_bg_enabled="true"/>
    </LinearLayout>
    <android.support.design.widget.CheckableImageButton
        android:id="@+id/light_manual_onoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@drawable/ripple_theme"
        android:src="@drawable/selector_power"/>

</LinearLayout>
